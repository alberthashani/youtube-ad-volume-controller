{
  "manifest_version": 3,
  "name": "YouTube Volume Control",
  "version": "1.0",
  "description": "Control YouTube video volume from a popup.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["constants.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}