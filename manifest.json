{
  "manifest_version": 3,
  "name": "YouTube Ad Volume Controller",
  "version": "1.1.0",
  "description": "Control YouTube ad volume from a popup.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "src/shared/config.js",
        "src/shared/constants.js", 
        "src/shared/utils.js",
        "src/content/volumeManager.js",
        "src/content/adDetector.js",
        "src/content/devPanel.js",
        "src/content/messageHandler.js",
        "src/content/index.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://github.com/alberthashani/youtube-ad-volume-controller"
}